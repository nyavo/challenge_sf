{% extends 'AppBundle::back_layout.html.twig' %}
{% block title %}{% if app.request.get('_route') == '_challenge_produit_add' %}Ajout produit{% else %}Modification produit{% endif %}{% endblock %}
{% block body %}
    <h1>
        {% if app.request.get('_route') == '_challenge_produit_add' %}
            Nouveau produit
        {% else %}
            Modification produit
        {% endif %}
    </h1>
    {{ form_start(form) }}
    <div>{{ form_label(form.titre) }} : {{ form_widget(form.titre) }}
        <p>{{ form_errors(form.titre) }}</p>
    </div>
    <div>{{ form_label(form.description) }} : {{ form_widget(form.description) }}
        <p>{{ form_errors(form.description) }}</p>
    </div>
    <div>{{ form_label(form.prix) }} : {{ form_widget(form.prix) }}
        <p>{{ form_errors(form.prix) }}</p>
    </div>
    <div>{{ form_label(form.stock) }} : {{ form_widget(form.stock) }}
        <p>{{ form_errors(form.stock) }}</p>
    </div>
    <div>{{ form_label(form.type) }} : {{ form_widget(form.type) }}
        <p>{{ form_errors(form.type) }}</p>
    </div>
    <div>{{ form_label(form.genre) }} : {{ form_widget(form.genre) }}
        <p>{{ form_errors(form.genre) }}</p>
    </div>
    <div>{{ form_label(form.fournisseur) }} : {{ form_widget(form.fournisseur) }}
        <p>{{ form_errors(form.fournisseur) }}</p>
    </div>
    {{ form_end(form) }}
{% endblock %}